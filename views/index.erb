<div class="container">
  <div class="jumbotron">
    <h3>Conversor de Moedas</h3>
  </div>
  
  <form action="/converte/" method="get">
    <input type="text" placeholder="valor" name="valor">
    <input type="text" placeholder="de" name="de">
    <input type="text" placeholder="para" name="para">
    <input type="submit" value="Converter">
  </form>
  
  <% if @result %>
    <h3>Resultado</h3>
    <ul>
      <% @result.each do |k, v| %>
        <li class=<%= params[:para] == k ? "active" : "" %>><%= params[:valor] %> <%= k %> = <%= v %> <%= params[:para] %></li>
      <% end %>
    </ul>
  <% end %>
  
  <p>Ex: 0.34 de d√≥lar para euro</p>
</div>

